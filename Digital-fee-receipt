<body>
  <div class="container">
    <h2>College Fee Payment</h2>

    <label for="studentName">Student Name</label>
    <input type="text" id="studentName" placeholder="Enter your name">

    <label for="feeType">Select Fee Type</label>
    <select id="feeType">
      <option value="Bus Fee" data-amount="5000">Bus Fee - ₹5000</option>
      <option value="Tuition Fee" data-amount="20000">Tuition Fee - ₹20000</option>
      <option value="JNTUH Fee" data-amount="3000">JNTUH Fee - ₹3000</option>
    </select>

    <button onclick="payNow()">Pay Now</button>

    <div class="receipt" id="receiptBox">
      <h3>Digital Fee Receipt</h3>
      <p><b>Name:</b> <span id="rName"></span></p>
      <p><b>Fee Type:</b> <span id="rFee"></span></p>
      <p><b>Amount:</b> ₹<span id="rAmount"></span></p>
      <p><b>Status:</b> ✅ Paid Successfully</p>
    </div>
  </div>

  <script>
    function payNow() {
      let name = document.getElementById("studentName").value;
      let feeSelect = document.getElementById("feeType");
      let feeType = feeSelect.options[feeSelect.selectedIndex].value;
      let amount = feeSelect.options[feeSelect.selectedIndex].getAttribute("data-amount");

      if(name === "") {
        alert("Please enter your name.");
        return;
      }

      // UPI Payment link (replace with your college UPI ID)
      let upiID = "yourupiid@upi"; // Example: principalcollege@upi
      let url = `upi://pay?pa=${upiID}&pn=CollegeName&am=${amount}&cu=INR&tn=${feeType}`;

      // Redirect to UPI app (PhonePe/Google Pay/Paytm)
      window.location.href = url;

      // Show receipt
      document.getElementById("rName").innerText = name;
      document.getElementById("rFee").innerText = feeType;
      document.getElementById("rAmount").innerText = amount;
      document.getElementById("receiptBox").style.display = "block";
    }
  </script>
</body>
